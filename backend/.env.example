NODE_ENV=development
PORT=5000

# Database (PostgreSQL)
DATABASE_URL="postgresql://school_user:your-password@localhost:5432/school_assessment"

# JWT
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# GCP Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=your-bucket-name
GCP_SERVICE_ACCOUNT_PATH=path/to/service-account-key.json

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000
